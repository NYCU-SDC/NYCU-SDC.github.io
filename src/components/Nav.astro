---
import ThemeToggle from "@/components/ThemeToggle.astro";
const currentPath = Astro.url.pathname;
---

<nav>
	<a href="/" class="logo">
		<span class="logo-text">NYCU SDC</span>
	</a>
	<ul class="nav-links">
		<li>
			<a href="/blog/" class:list={[{ active: currentPath.startsWith("/blog") }]}>Blog</a>
		</li>
		<li>
			<a href="/about/" class:list={[{ active: currentPath === "/about/" }]}>About</a>
		</li>
		<li>
			<a href="https://sdc-nycu.notion.site/welcome" target="_blank" rel="noopener">Notion</a>
		</li>
		<ThemeToggle />
	</ul>
</nav>

<style>
	nav {
		position: fixed;
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin: 0 auto;
		padding: 1rem 2rem;
		left: 50%;
		transform: translateX(-50%);
		top: 1.5rem;
		z-index: 1000;
		border: 1px solid var(--nord5);
		border-radius: 999px;
		backdrop-filter: blur(10px);
		background-color: var(--nav-bg);
		height: 3.875rem;
		max-width: 866px;
		width: calc(100% - 3rem);
		transition:
			background-color 0.3s ease,
			border-color 0.3s ease;
	}

	.logo {
		text-decoration: none;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.logo-text {
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--nord1);

		transition: color 0.2s ease;
	}

	.logo:hover .logo-text {
		color: var(--nord10);
	}

	.nav-links {
		display: flex;
		align-items: center;
		list-style: none;
		gap: 2rem;
		margin: 0;
		padding: 0;
	}

	.nav-links a {
		text-decoration: none;
		color: var(--nord2);
		font-weight: 400;
		transition: color 0.2s ease;
		padding: 0.5rem 0;
		position: relative;
	}

	.nav-links a::after {
		content: "";
		position: absolute;
		bottom: 0;
		left: 0;
		width: 0;
		height: 2px;
		transition: width 0.3s ease;
	}

	.nav-links a:hover {
		color: var(--nord10);
	}

	.nav-links a:hover::after,
	.nav-links a.active::after {
		width: 100%;
	}

	.nav-links a.active {
		color: var(--nord10);
		font-weight: 700;
	}

	@media (max-width: 768px) {
		.nav-container {
			padding: 1rem;
			flex-direction: column;
			gap: 1rem;
		}

		.nav-links {
			gap: 1.5rem;
		}

		.logo-text {
			font-size: 1.25rem;
		}
	}

	@media (max-width: 480px) {
		.nav-links {
			gap: 1rem;
			font-size: 0.9rem;
		}
	}
</style>
