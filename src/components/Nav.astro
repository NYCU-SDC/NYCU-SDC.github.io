---
import ThemeToggle from "@/components/ThemeToggle.astro";
const currentPath = Astro.url.pathname;
---

<nav>
	<a href="/" class="logo">
		<span class="logo-text">NYCU SDC</span>
	</a>
	<button class="hamburger" id="hamburger" aria-label="Toggle navigation menu">
		<span></span>
		<span></span>
		<span></span>
	</button>
	<ul class="nav-links" id="nav-links">
		<div class="mobile-menu-header">
			<span class="mobile-logo">NYCU SDC</span>
			<ThemeToggle />
		</div>
		<li>
			<a href="/blog/" class:list={[{ active: currentPath.startsWith("/blog") }]}>Blog</a>
		</li>
		<li>
			<a href="/about/" class:list={[{ active: currentPath === "/about/" }]}>About</a>
		</li>
		<li>
			<a href="https://sdc-nycu.notion.site/welcome" target="_blank" rel="noopener">Notion</a>
		</li>
		<li class="desktop-theme-toggle">
			<ThemeToggle />
		</li>
	</ul>
</nav>

<style>
	nav {
		position: fixed;
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin: 0 auto;
		padding: 1rem 2rem;
		left: 50%;
		transform: translateX(-50%);
		top: 1.5rem;
		z-index: 1000;
		border: 1px solid var(--nord5);
		border-radius: 999px;
		backdrop-filter: blur(10px);
		background-color: var(--nav-bg);
		height: 3.875rem;
		max-width: 866px;
		width: calc(100% - 3rem);
		transition:
			background-color 0.3s ease,
			border-color 0.3s ease;
	}

	.logo {
		text-decoration: none;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.logo-text {
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--nord1);

		transition: color 0.2s ease;
	}

	.logo:hover .logo-text {
		color: var(--nord10);
	}

	.hamburger {
		display: none;
    	flex-direction: column;
		gap: 0.32rem;
		background: none;
		border: none;
		cursor: pointer;
	}

	.hamburger span {
		width: 25px;
		height: 3px;
		background: var(--nord1);
		transition: all 0.3s ease;
		border-radius: 0.125rem;
		transform-origin: center;
	}

	.hamburger.active span:nth-child(1) {
		transform: rotate(45deg) translateY(0.7rem);
	}

	.hamburger.active span:nth-child(2) {
		opacity: 0;
		transform: scale(0);
	}

	.hamburger.active span:nth-child(3) {
		transform: rotate(-45deg) translateY(-0.7rem);
	}

	.mobile-menu-header {
		display: none;
	}

	.nav-links {
		display: flex;
		align-items: center;
		list-style: none;
		gap: 2rem;
		margin: 0;
		padding: 0;
	}

	.nav-links a {
		text-decoration: none;
		color: var(--nord2);
		font-weight: 400;
		transition: color 0.2s ease;
		padding: 0.5rem 0;
		position: relative;
	}

	.nav-links a::after {
		content: "";
		position: absolute;
		bottom: 0;
		left: 0;
		width: 0;
		height: 2px;
		transition: width 0.3s ease;
	}

	.nav-links a:hover {
		color: var(--nord10);
	}

	.nav-links a:hover::after,
	.nav-links a.active::after {
		width: 100%;
	}

	.nav-links a.active {
		color: var(--nord10);
		font-weight: 700;
	}

	@media (max-width: 768px) {
		.hamburger {
			display: flex;
		}

		.mobile-menu-header {
			display: flex;
			justify-content: space-between;
			align-items: center;
			width: 100%;
			margin-bottom: 1rem;
		}

		.mobile-logo {
			font-size: 1.25rem;
			font-weight: 700;
			color: var(--nord1);
		}

		.desktop-theme-toggle {
			display: none;
		}

		.nav-links {
			position: fixed;
			top: 6rem;
			left: 50%;
			width: 100%;
			transform: translate(-50%, -150%);
			background: var(--mobile-nav-bg);
			border: 1px solid var(--nord5);
			flex-direction: column;
			gap: 0;
			padding: 2rem;
			border-radius: 2rem;
			backdrop-filter: blur(10px);
			opacity: 0;
			pointer-events: none;
		}

		.nav-links.transitioning {
			transition: transform 0.3s ease, opacity 0.3s ease;
		}

		.nav-links.active {
			transform: translate(-50%, 0);
			opacity: 1;
			pointer-events: auto;
		}

		.nav-links li {
			width: 100%;
		}

		.nav-links a {
			display: block;
			font-size: 1.2rem;
		}

		.logo-text {
			font-size: 1.25rem;
		}
	}

	@media (max-width: 480px) {
		.nav-container {
      		padding: 1rem;
    	}
	}
</style>
<script>
	function initNav() {
		const hamburger = document.getElementById("hamburger");
		const navLinks = document.getElementById("nav-links");

		if (!hamburger || !navLinks) return;

		const newHamburger = hamburger.cloneNode(true) as HTMLElement;
		hamburger.parentNode?.replaceChild(newHamburger, hamburger);

		newHamburger.addEventListener("click", () => {
			navLinks.classList.add("transitioning");
			
			requestAnimationFrame(() => {
				newHamburger.classList.toggle("active");
				navLinks.classList.toggle("active");
			});
		});

		const links = navLinks.querySelectorAll("a");
		links.forEach(link => {
			link.addEventListener("click", () => {
				navLinks.classList.add("transitioning");
				
				requestAnimationFrame(() => {
					newHamburger.classList.remove("active");
					navLinks.classList.remove("active");
				});
			});
		});

		document.addEventListener("click", (e) => {
			const target = e.target as HTMLElement;
			if (!target.closest("nav")) {
				navLinks.classList.add("transitioning");
				
				requestAnimationFrame(() => {
					newHamburger.classList.remove("active");
					navLinks.classList.remove("active");
				});
			}
		});

		navLinks.addEventListener("transitionend", () => {
			if (!navLinks.classList.contains("active")) {
				navLinks.classList.remove("transitioning");
			}
		});
	}

	initNav();
	document.addEventListener("astro:page-load", initNav);
</script>