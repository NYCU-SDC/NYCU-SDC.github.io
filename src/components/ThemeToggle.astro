---
// Theme Toggle Component
---

<button id="theme-toggle" aria-label="Toggle dark mode" title="Toggle dark mode">
	<svg class="sun-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
		<circle cx="12" cy="12" r="5"></circle>
		<line x1="12" y1="1" x2="12" y2="3"></line>
		<line x1="12" y1="21" x2="12" y2="23"></line>
		<line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
		<line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
		<line x1="1" y1="12" x2="3" y2="12"></line>
		<line x1="21" y1="12" x2="23" y2="12"></line>
		<line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
		<line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
	</svg>
	<svg class="moon-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
		<path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
	</svg>
</button>

<style>
	#theme-toggle {
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5rem;
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--nord2);
		transition: color 0.2s ease, transform 0.2s ease;
		border-radius: 0.5rem;
	}

	#theme-toggle:hover {
		color: var(--nord10);
		transform: scale(1.1);
	}

	.sun-icon {
		display: none;
	}

	.moon-icon {
		display: block;
	}

	:global(.dark) #theme-toggle .sun-icon {
		display: block;
	}

	:global(.dark) #theme-toggle .moon-icon {
		display: none;
	}
</style>

<script>
	let mediaQueryListener: ((e: MediaQueryListEvent) => void) | null = null;

	function toggleTheme() {
		const root = document.documentElement;
		const currentTheme = root.classList.contains('dark') ? 'light' : 'dark';
		
		root.classList.toggle('dark');
		localStorage.setItem('theme', currentTheme);
	}

	function setupThemeToggle() {
		const mediaQuery = window.matchMedia('(prefers-color-scheme: dark)');
		
		// Remove old media query listener if it exists
		if (mediaQueryListener) {
			mediaQuery.removeEventListener('change', mediaQueryListener);
		}

		// Add click handler (button is recreated on each page load, so no need to remove)
		document.getElementById('theme-toggle')?.addEventListener('click', toggleTheme);

		// Listen for system theme changes
		mediaQueryListener = () => {
			const theme = localStorage.getItem('theme');
			if (theme === 'system' || !theme) {
				const root = document.documentElement;
				root.classList.toggle('dark', mediaQuery.matches);
			}
		};
		mediaQuery.addEventListener('change', mediaQueryListener);
	}

	// Initialize on first load
	setupThemeToggle();

	// Reinitialize after each page transition
	document.addEventListener('astro:page-load', setupThemeToggle);
</script>
