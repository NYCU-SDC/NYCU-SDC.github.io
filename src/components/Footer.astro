<style>
	footer {
		background-color: var(--nord6);
		border-top: 1px solid var(--nord5);
		margin-top: 4rem;
	}

	.footer-container {
		max-width: var(--max-width);
		margin: 0 auto;
		padding: 3rem 2rem 1.5rem;
	}

	.footer-content {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2rem;
		/* margin-bottom: 2rem; */
	}

	.footer-links {
		display: flex;
		gap: 1rem;
		align-items: center;
	}

	.footer-section {
		margin-bottom: 2rem;
	}

	.footer-section h3 {
		font-size: 2rem;
		font-weight: 400;
		color: var(--nord1);
		margin-bottom: 1rem;
	}

	.footer-section h4 {
		font-size: 1rem;
		color: var(--nord2);
		margin-bottom: 0.75rem;
		font-weight: 400;
	}

	.footer-section p {
		color: var(--nord3);
		margin: 0;
		font-size: 0.9rem;
	}

	.footer-section ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.footer-section ul li {
		margin-bottom: 0.5rem;
	}

	.footer-section a {
		color: var(--nord3);
		text-decoration: none;
		transition: color 0.2s ease;
		font-size: 0.9rem;
	}

	.footer-section a:hover {
		color: var(--primary);
	}

	.footer-bottom {
		padding-top: 1.5rem;
		border-top: 1px solid var(--nord5);
		text-align: center;
	}

	.footer-bottom p {
		color: var(--nord3);
		font-size: 0.85rem;
		margin: 0;
	}

	@media (max-width: 768px) {
		.footer-container {
			padding: 2rem 1rem 1rem;
		}

		.footer-content {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.footer-section {
			text-align: center;
			justify-content: center;
		}
	}
</style>
