---
import { type CollectionEntry, getCollection, render } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import FormattedDate from "@/components/FormattedDate.astro";
import { Image } from "astro:assets";

export async function getStaticPaths() {
	const posts = await getCollection("blog");
	return posts.map(post => ({
		params: { slug: post.id },
		props: post
	}));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await render(post);
const postDate = post.data.pubDate || post.data.date;
---

<Layout title={post.data.title} description={post.data.description}>
	<article>
		<div class="prose">
			<header style={post.data.heroImage ? `background-image: linear-gradient(0deg, rgba(229, 233, 240, 0.86) 0%, rgba(229, 233, 240, 0.86) 100%), url('${post.data.heroImage.src}');` : ""}>
				{
					postDate && (
						<div class="date">
							<FormattedDate date={postDate} />
							{post.data.updatedDate && (
								<div class="last-updated-on">
									Last updated on <FormattedDate date={post.data.updatedDate} />
								</div>
							)}
						</div>
					)
				}
				<h1 style="font-family: Goldman;">{post.data.title}</h1>
				<span class="type">{post.data.type}</span>
			</header>
			<div class="content">
				{post.data.author && <p class="author">By {post.data.author}</p>}
				{post.data.description && <p class="description">{post.data.description}</p>}
				<Content />
			</div>
		</div>
	</article>
	<style>
		header {
			padding: 5rem 1rem 2rem 1rem;
			background-size: cover;
			background-position: center;
			background-repeat: no-repeat;
			min-height: 33rem;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			text-align: center;
			gap: 1rem;
		}
		header h1 {
			margin: 0 0 0.5rem 0;
			color: var(--nord1);
			font-size: 3.5rem;
			line-height: 1.2;
		}

		.date {
			color: var(--nord3);
			margin-bottom: 0.5rem;
			font-size: 1rem;
			font-family: "Goldman";
		}

		.type {
			padding: 0.5rem 2rem;
			border-radius: 10000px;
			background: rgba(255, 255, 255, 0.43);
			font-family: "Goldman";
			line-height: 1;
		}

		.last-updated-on {
			font-style: italic;
			font-size: 0.9rem;
			margin-top: 0.25rem;
		}

		.content .author {
			color: var(--nord3);
			font-size: 1rem;
			margin: 1rem 0 2rem 0;
			font-family: "Goldman";
		}

		.content .description {
			margin-bottom: 3rem;
			font-family: "Goldman";
		}

		.content {
			max-width: var(--content-width);
			margin: 0 auto;
			padding: 2rem 1rem;
		}

		.content {
			font-size: 1.1rem;
			line-height: 1.8;
			font-family: "GenSekiGothicTW", sans-serif;
		}

		.content :global(h1),
		.content :global(h2),
		.content :global(h3),
		.content :global(h4),
		.content :global(h5),
		.content :global(h6) {
			color: var(--nord1);
			margin: 2rem 0 1rem;
			line-height: 1.3;
			font-family: "Goldman";
		}

		.content :global(h1) {
			font-size: 2.5rem;
		}

		.content :global(h2) {
			font-size: 2rem;
		}

		.content :global(h3) {
			font-size: 1.6rem;
		}

		.content :global(h4) {
			font-size: 1.5rem;
		}

		.content :global(h4) {
			font-size: 1.125rem;
		}

		.content :global(p) {
			margin: 1rem 0;
		}

		.content :global(a) {
			color: var(--primary);
			text-decoration: underline;
			transition: opacity 0.2s ease;
		}

		.content :global(a:hover) {
			opacity: 0.8;
		}

		.content :global(code) {
			background: var(--nord4, #d8dee9);
			padding: 0.2rem 0.4rem;
			border-radius: 4px;
			font-size: 0.9em;
			font-family: "Fira Code", monospace;
		}

		.content :global(pre) {
			background-color: var(--nord1) !important;
			color: #fff;
			padding: 1rem 2rem;
			border-radius: 1rem;
			overflow-x: auto;
			margin: 1.5rem 6.5rem;
		}

		.content :global(pre code) {
			font-family: "Fira Code", monospace;
			background-color: transparent;
			padding: 0;
			color: inherit;
		}

		.content :global(blockquote) {
			padding-left: 4rem;
			margin: 3rem 0;
			position: relative;
		}

		.content :global(blockquote::before) {
			content: "â€œ";
			position: absolute;
			left: 1rem;
			top: -0.5rem;
			font-size: 3rem;
			font-family: "Goldman";
			color: var(--nord1, #3b4252);
			line-height: 1;
		}

		.content :global(ul),
		.content :global(ol) {
			margin: 1rem 0;
			padding-left: 2rem;
		}

		.content :global(li) {
			margin: 0.5rem 0;
		}

		.content :global(ul li::marker) {
			font-size: 0.5em;
		}

		.content :global(img) {
			max-width: 100%;
			height: auto;
			border-radius: 8px;
			margin: 1.5rem 0;
		}

		.content :global(table) {
			width: 100%;
			border-collapse: separate;
			border-spacing: 0;
			margin: 2rem 0;
			font-size: 1rem;
			border-radius: 0.25rem;
			border: 0.5px solid var(--nord4, #d8dee9);
		}

		.content :global(thead) {
			background: var(--nord5, #e5e9f0);
		}

		.content :global(th) {
			padding: 0.5rem 1rem;
			text-align: left;
			font-weight: 600;
			color: var(--nord1);
			border: 1px solid var(--nord4, #d8dee9);
		}

		.content :global(td) {
			padding: 0.5rem 1rem;
			border: 1px solid var(--nord4, #d8dee9);
		}

		@media (max-width: 768px) {
			header h1 {
				font-size: 2rem;
			}

			.content {
				font-size: 1rem;
			}

			.content :global(h1) {
				font-size: 1.75rem;
			}

			.content :global(h2) {
				font-size: 1.5rem;
			}

			.content :global(h3) {
				font-size: 1.25rem;
			}

			.content :global(pre) {
				margin: 1.5rem 1rem;
			}
		}
	</style>
</Layout>
